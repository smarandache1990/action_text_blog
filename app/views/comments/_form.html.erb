<%= form_with model: [@post, @post.comments.build] do |f| %>

    <div>
        <%= f.label :commenter %><br>
        <%= f.text_area :commenter %>
    </div>

    <div>
        <%= f.label :body %><br>
        <%= f.rich_text_area :body %>
    </div>

    <div>
        <%= f.label :status %><br>
        <%= f.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </div>

    <%= f.submit "Submit" %>
<% end %>